@model PersonelFollow.WebUI.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş";
}
@if (TempData["hata"] != null)
{
    <div class="col-md-12 col-sm-12 text-center">
        <div class="alert alert-danger">
            @TempData["hata"]
        </div>
    </div>
}
@if (TempData["basari"] != null)
{
    <div class="col-md-12 col-sm-12 text-center">
        <div class="alert alert-success">
            @TempData["basari"]
        </div>
    </div>
}
<div class="col-md-12 col-sm-12 text-center">
    <h1>Giriş</h1>

    <hr />
    <form asp-action="Giris">
        <input type="hidden" name="ReturnUrl" value="@ViewBag.returnUrl" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EMail" class="control-label"></label>
            <input asp-for="EMail" class="form-control col-md-4 mx-auto" />
            <span asp-validation-for="EMail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control col-md-4  mx-auto" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Giriş" class="btn btn-primary mx-auto" />
        </div>
    </form>
    <hr/>
    <a asp-controller="Account" asp-action="KayitOl" class="badge badge-light">Kayıt Olmak İçin Tıklayınız...</a>
</div>

